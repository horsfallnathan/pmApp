  <form action="/auth/signup" method="POST" id="form-container">
    <div class="first-name-container">
      <label for="firstName">First Name</label>
      <input id="firstNameInput" type="text" name="firstName" placeholder="First Name">
    </div>

    <br>
    <div class="last-name-container">
      <label for="lastName">Last Name</label>
      <input id="lastNameInput" type="text" name="lastName" placeholder="Last Name">
    </div>

    <br>
    <div class="email-container">
      <label for="email">Email</label>
      <input id="emailInput" type="text" name="email" placeholder="Enter email">
    </div>

    <br>

    <div class="username-container">
      <label for="username">Username</label>
      <input id="usernameInput" type="text" name="username" placeholder="Enter Username">
    </div>

    <br>

    <div class="password-container">
      <label for="password">Password</label>
      <input id="password" type="password" name="password" placeholder="Enter password">
    </div>

    <br>

    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}

    <br>

    <button>Create account</button>

    <p class="account-message">
      Do you already have an account?
      <a href="/auth/login">Login</a>
    </p>
  </form>
</div>